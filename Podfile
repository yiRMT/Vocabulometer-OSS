# platform :ios, '15.0'

target 'Vocabulometer-OSS' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Vocabulometer-OSS
  pod 'FirebaseCore'
  pod 'FirebaseAuth'
  pod 'FirebaseFirestore'
  pod 'FirebaseStorage'
  pod 'FirebaseMessaging'
  pod 'FirebaseAnalytics'

  # Add Charts
  pod 'Charts'
  pod 'ScrollableGraphView'

  # Add SwiftyJSON
  pod 'SwiftyJSON'

  # Add RegeributedTextView for highlighting unknown words
  pod 'RegeributedTextView'
end
